---
const { class: className, isButton, ...rest } = Astro.props;
---

{
	isButton ? (
		<button class:list={[className]} {...rest}>
			<slot />
		</button>
	) : (
		<a class:list={[className]} {...rest}>
			<slot />
		</a>
	)
}

<style>
	a,
	button {
		cursor: pointer;
		display: inline-block;
		color: black;
		text-decoration: none;
		position: relative;
		transition: all 0.2s cubic-bezier(0.445, 0.05, 0.55, 0.95);
		z-index: 1;
	}
	a::after,
	button::after {
		content: "";
		background: #292524;
		/* mix-blend-mode: exclusion; */
		width: calc(100% + 9px);
		height: 1px;
		position: absolute;
		bottom: -2px;
		left: -4px;
		transition: all 0.2s cubic-bezier(0.445, 0.05, 0.55, 0.95);
	}
	a:hover,
	button:hover {
		color: white;
	}
	a:hover::after,
	button:hover::after {
		height: calc(100% + 4px);
		z-index: -1;
	}
</style>
