---
import BaseLayout from "@/layouts/BaseLayout.astro";
import type { AstroSeoProps } from "@astrolib/seo";
import Articles from "@components/blog/Articles.astro";

const seo: AstroSeoProps = {
	title: "Startup Bridge Blog: News, Insights & Startup Stories",
	description:
		"Read the Startup Bridge Blog for the latest event news, startup stories, and tips for founders and investors. Stay connected with the Series A ecosystem.",
	canonical: "https://startupbridgeph.com/blog/",
	openGraph: {
		url: "https://startupbridgeph.com/blog",
		title: "Startup Bridge Blog: News, Insights & Startup Stories",
		description:
			"Read the Startup Bridge Blog for the latest event news, startup stories, and tips for founders and investors. Stay connected with the Series A ecosystem.",
		images: [
			{
				url: "https://startupbridgeph.com/opengraph/social-og.jpg",
				width: 1200,
				height: 630,
				alt: "Startup Bridge Blog social preview",
				type: "image/jpeg",
			},
			{
				url: "https://startupbridgeph.com/opengraph/twitter-og.jpg",
				width: 4096,
				height: 4096,
				alt: "Startup Bridge Blog Twitter preview",
				type: "image/jpeg",
			},
			{ url: "https://startupbridgeph.com/opengraph/social-og.jpg" },
			{ url: "https://startupbridgeph.com/opengraph/twitter-og.jpg" },
		],
		site_name: "Startup Bridge",
	},
	twitter: {
		handle: "@startupbridge",
		site: "@startupbridge",
		cardType: "summary_large_image",
	},
};
---

<BaseLayout seo={seo}>
	<Articles />
</BaseLayout>
